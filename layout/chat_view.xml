<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/chatCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical">

        <!--<ImageView-->
            <!--android:layout_width="55dp"-->
            <!--android:layout_height="55dp"-->
            <!--android:src="@drawable/ic_contact_picture_holo_light"-->
            <!--android:layout_margin="5dp"-->
            <!--style="@style/quickContactBadgeStyle"-->
            <!--android:paddingRight="3dp" />-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:paddingRight="3dp"
                android:id="@+id/chatCircleImage" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:background="@drawable/contact_default_circle"
                android:id="@+id/chatCircleText" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/openchatActivity"
                >

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameChatView"
                    style="?android:textAppearanceMedium"
                    android:textColor="#6e6e6e"
                     />

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/partialMsg"
                    android:maxLines="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                >


                <TextView
                    android:text="12:00 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateChatView"
                    android:textAllCaps="true"
                    android:textSize="10dp"
                    android:gravity="right"
                    android:layout_alignBaseline="@+id/nameChatView"/>

                <!--<ImageView-->
                    <!--android:layout_width="14dp"-->
                    <!--android:layout_height="14dp"-->
                    <!--android:layout_marginTop="9dp"-->
                    <!--android:src="@drawable/num"-->
                    <!--android:id="@+id/onlineChatView"-->
                    <!--android:visibility="invisible"-->
                    <!--android:layout_marginRight="7dp"-->
                    <!--android:layout_gravity="right"/>-->
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    </android.support.v7.widget.CardView>
    </LinearLayout>
